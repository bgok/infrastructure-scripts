{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "types": [
      "node"
    ],

    // Target latest version of ECMAScript.
    "target": "es6",

    "isolatedModules": false,
    // Import non-ES modules as default imports.
    "esModuleInterop": true,

    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "old",
    "**/*.spec.ts"
  ]
}